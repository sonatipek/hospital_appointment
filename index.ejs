<!DOCTYPE html>
<html lang="tr-TR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <title>Hasta ve Randevu Kayıt Sistemi</title>
</head>
<body>
  <div class="container" style ="margin-top:20px;" ng-app="myapp">

    <!-- Hasta Kayıt -->
    <div class="card row">
      <div class="card-header">Hasta Kayıt</div>
      <div class="card-body"> 
        <form id = "hasta-form" name="form__hasta-kayit" action="hastaKayit" method="POST">
          <div class="form-row">

            <!-- Hasta Adı -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="hastadi">Hasta Adı:</label>
              <input class="form-control" type="text" name="hastadi" id = "hastadi" placeholder="Mehmet" required>
            </div>

            <!-- Hasta Soyadı -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="hastasoyadi">Hasta Soyadı:</label>
              <input class="form-control" type="text" name="hastasoyadi" id = "hastasoyadi" placeholder="Ayvaz" required>
            </div>

            <!-- Hasta TC -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="hastatc">Hasta T.C. No:</label>
              <input class="form-control" type="number" name="hastatc" id = "hastatc" placeholder="Boşluksuz 11 hane olmalıdır" min="0" max="99999999999" pattern="[0-9]{11}" required>
            </div>
            
            <!-- HastaTel. No. -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="hastatel">Hasta Telefon No</label>
              <input class="form-control" type="tel" name="hastatel" id = "hastatel" placeholder="xxx-xxx-xxxx" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
            </div>

            <!-- Hasta e-mail -->
            <div class="form-group col-md-6 mt-3 mt-md-2">
              <label for="hastaemail">Hasta E-mail</label>
              <input class="form-control" type="email" name="hastaemail" id = "hastaemail" placeholder="ornek@ornek.com" required>
            </div>
          </div>

          <button type="submit" class="btn btn-success">Hasta Kaydet</button>
        </form>
      </div>
    </div>
    

    <!-- Randevu Kayıt -->
    <div class="card row mt-5">
      <div class="card-header">Randevu Kayıt</div>
      <div class="card-body"> 
        <form id = "randevu-form" name="form__randevu-kayit" action="randevuKayit" method="POST">
          <div class="form-row">

            <!-- Randevu Saati -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="randevu-saati">Randevu Tarih ve Saati</label>
              <input class="form-control" type="datetime-local" name="randevuSaati" id = "randevu-saati" required>
            </div>

            <!-- Hasta Adı -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="randevu__hastadi">Hasta Seçiniz</label>
              <select class="form-control" name="randevu__hastadi" id="randevu__hastadi" ng-controller="mycontrol">

                <option value="hasta-empty">Lütfen Bir Hasta Seçiniz</option>
                
              </select>
              
            </div>

            <!-- Doktor Adı -->
            <div class="form-group col-6 col-sm-4 col-md-3 ">
              <label for="doktoradi">Doktor Seçiniz</label>
              <select class="form-control" name="randevu__doktoradi" id="doktoradi">
                <option value="doktor-empty">Lütfen Bir Doktor Seçiniz</option>
                <% data.forEach(el => { %>
                  <option value="doktor-1"> <%= el.adi %></option>
                <% }) %>
                
              </select>
            </div>
          
          </div>
          <button type="submit" class="btn btn-success" id="create-randevu">Randevu Oluştur</button>

        </form>
      </div>
    </div>



  </div>


    
        
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  
  <!-- <script src="./main.js"></script> -->

</body>
</html>