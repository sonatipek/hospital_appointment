<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Appointment System | Doktor Kayit</title>

    <!-- Include Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <!-- Include Navbar -->
    <%- include('partials/navbar') %>
    
    <div class="container" style ="margin-top:20px;">
        <div class="card row">
          <div class="card-header">Doktor Kayıt</div>
          <div class="card-body"> 
            <form id = "hasta-form" name="form__hasta-kayit" action="hastaKayit" method="POST">
              <div class="form-row">
    
                <!-- Doktor Adı -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__doktoradi">Doktor Adı:</label>
                  <input class="form-control" type="text" name="kayit__doktoradi" id = "kayit__doktoradi" placeholder="Mehmet" required>
                </div>
    
                <!-- Doktor Soyadı -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__doktorsoyadi">Doktor Soyadı:</label>
                  <input class="form-control" type="text" name="kayit__doktorsoyadi" id = "kayit__doktorsoyadi" placeholder="Ayvaz" required>
                </div>
    
                <!-- Doktor Branş -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                    <label for="kayit__doktorbrans">Doktor Branşı</label>
                    <select class="form-control" name="kayit__doktorbrans" id="kayit__doktorbrans">
                      <option value="doktor-empty">Lütfen Bir Branş Seçiniz</option>
                      
                      
                    </select>
                </div>
                
                <!-- Doktor Klinik -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                    <label for="kayit__doktorklinik">Doktor Klinik</label>
                    <select class="form-control" name="kayit__doktorklinik" id="kayit__doktorklinik">
                      <option value="doktor-empty">Lütfen Bir Klinik Seçiniz</option>
                      
                      
                    </select>
                </div>

                
    
                <!-- Doktor Telefon -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                    <label for="kayit__doktortelefon">Doktor Telefon No</label>
                    <input class="form-control" type="tel" name="kayit__doktortelefon" id = "kayit__doktortelefon" placeholder="xxx-xxx-xxxx" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                  </div>    
              

                <!-- Doktor Email -->
                <div class="form-group col-md-6">
                  <label for="kayit__doktoremail">Doktor E-mail</label>
                  <input class="form-control" type="email" name="kayit__doktoremail" id = "kayit__doktoremail" placeholder="ornek@ornek.com" required>
                </div>

              </div>
    
              <button type="submit" class="btn btn-success">Doktor Kaydet</button>
            </form>
          </div>
        </div>
      </div>
    



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>