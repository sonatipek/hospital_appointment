<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Appointment System | Hasta Kayıt</title>

    <!-- Include Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <div class="container" style ="margin-top:20px;">
        <div class="card row">
          <div class="card-header">Hasta Kayıt</div>
          <div class="card-body"> 
            <form id = "hasta-form" name="form__hasta-kayit" action="hastaKayit" method="POST">
              <div class="form-row">
    
                <!-- Hasta Adı -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__hastaadi">Hasta Adı:</label>
                  <input class="form-control" type="text" name="kayit__hastaadi" id = "kayit__hastaadi" placeholder="Mehmet" required>
                </div>
    
                <!-- Hasta Soyadı -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__hastasoyadi">Hasta Soyadı:</label>
                  <input class="form-control" type="text" name="kayit__hastasoyadi" id = "kayit__hastasoyadi" placeholder="Ayvaz" required>
                </div>
    
                <!-- Hasta TC -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__hastatc">Hasta T.C. No:</label>
                  <input class="form-control" type="number" name="kayit__hastatc" id = "hastatc" placeholder="Boşluksuz 11 hane olmalıdır" min="0" max="99999999999" pattern="[0-9]{11}" required>
                </div>
                
                <!-- HastaTel. No. -->
                <div class="form-group col-6 col-sm-4 col-md-3 ">
                  <label for="kayit__hastatelefon">Hasta Telefon No</label>
                  <input class="form-control" type="tel" name="kayit__hastatelefon" id = "kayit__hastatelefon" placeholder="xxx-xxx-xxxx" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
                </div>
    
                <!-- Hasta e-mail -->
                <div class="form-group col-md-6 mt-3 mt-md-2">
                  <label for="kayit__hastaemail">Hasta E-mail</label>
                  <input class="form-control" type="email" name="kayit__hastaemail" id = "kayit__hastaemail" placeholder="ornek@ornek.com" required>
                </div>
              </div>
    
              <button type="submit" class="btn btn-success">Hasta Kaydet</button>
            </form>
          </div>
        </div>
      </div>
    
    



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>